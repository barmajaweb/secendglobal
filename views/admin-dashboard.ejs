            rows.forEach(row => {
                let show = true;
                
                if (category && row.getAttribute('data-category') !== category) {
                    show = false;
                }
                
                if (city && row.getAttribute('data-city') !== city) {
                    show = false;
                }
                
                if (price) {
                    const productPrice = parseFloat(row.getAttribute('data-price') || 0);
                    if (price === '0-1000' && (productPrice < 0 || productPrice > 1000)) show = false;
                    if (price === '1000-5000' && (productPrice < 1000 || productPrice > 5000)) show = false;
                    if (price === '5000+' && productPrice <= 5000) show = false;
