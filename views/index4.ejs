        /* Brand Section */
        .brand {
            display: flex;
            gap: 16px;
            align-items: center;
            margin-bottom: 30px;
        }

        .brand .logo {
            width: 64px;
            height: 64px;
            border-radius: 16px;
            
            display: flex;
            align-items: center;
            justify-content: center;
