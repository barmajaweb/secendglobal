                height: 56px;
                font-size: 20px;
            }

            .brand .info .title {
                font-size: 20px;
            }

            .qr-wrap canvas,
            .qr-wrap img {
                width: 140px;
                height: 140px;
            }
        }

        @media (max-width: 480px) {
            .contact-actions {
                flex-direction: column;
            }

            .action-btn {
                justify-content: center;
            }

            .social-actions {
                flex-direction: column;
                width: 100%;
            }

            .social-btn {
                justify-content: center;
            }
        }
