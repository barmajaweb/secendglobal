            align-items: center;
            gap: 16px;
        }

        .qr-title {
            font-weight: 800;
            font-size: 20px;
            margin-bottom: 10px;
        }

        .qr-wrap {
            background: white;
            padding: 16px;
            border-radius: 16px;
            box-shadow: 0 8px 30px rgba(0, 0, 0, 0.2);
            animation: qrPulse 2s ease-in-out infinite;
        }

        @keyframes qrPulse {
            0%, 100% { transform: scale(1); }
            50% { transform: scale(1.05); }
        }

        .qr-wrap canvas,
        .qr-wrap img {
            width: 160px;
            height: 160px;
            display: block;
            border-radius: 8px;
        }

        .qr-note {
            font-size: 12px;
            opacity: 0.9;
            line-height: 1.4;
            max-width: 280px;
        }

        /* Social Actions */
        .social-actions {
            display: flex;
            gap: 10px;
            flex-wrap: wrap;
            justify-content: center;
        }

        .social-btn {
            display: inline-flex;
            gap: 6px;
            align-items: center;
