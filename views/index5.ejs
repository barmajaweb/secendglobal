  }).join('');
  
  // ÿ•ÿ∂ÿßŸÅÿ© event listeners ŸÑŸÑÿßŸÇÿ™ÿ±ÿßÿ≠ÿßÿ™
  document.querySelectorAll('.s-item').forEach(el => {
    el.addEventListener('click', () => {
