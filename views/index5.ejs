      // ÿßŸÑÿ™ÿ≠ŸÇŸÇ ŸÖŸÜ ŸÉŸÑ ŸÅŸÑÿ™ÿ±
      let isVisible = true;
      
      if (filters.city && filters.city !== '' && cardData.city !== filters.city) {
        isVisible = false;
      }
      
      if (filters.style && filters.style !== '' && cardData.style !== filters.style) {
        isVisible = false;
      }
      
      if (filters.color && filters.color !== '' && cardData.color !== filters.color) {
        isVisible = false;
      }
      
      if (filters.Article && filters.Article !== '' && cardData.category !== filters.Article) {
        isVisible = false;
      }
      
      if (filters.price && filters.price !== '') {
        const price = cardData.price;
        if (filters.price === '500' && price > 500) isVisible = false;
        else if (filters.price === '1000' && (price <= 500 || price > 1000)) isVisible = false;
        else if (filters.price === '3000' && (price <= 1000 || price > 3000)) isVisible = false;
