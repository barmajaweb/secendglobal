                        }, 2000);
                    }).catch(() => {
                        alert('فشل النسخ، انسخ الرقم يدوياً: ' + phone);
                    });
                } else {
                    // Fallback للمتصفحات القديمة
                    const textArea = document.createElement('textarea');
