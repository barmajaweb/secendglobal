            let lastFocused = null;

            // توليد QR Code
            function generateQR() {
                if (window.QRCode && qrCanvas) {
                    QRCode.toCanvas(qrCanvas, QR_TARGET, {
                        width: 160,
                        height: 160,
                        margin: 2,
                        color: {
                            dark: '#004d40',
