<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Vira Decoration</title>
    <style>
        .logo {
  font-size: 1rem;
  font-weight: bold;
  color: #1c2b6c;
  cursor: pointer;
  animation: logoEntrance 0.8s ease-out forwards;
  transition: transform 0.4s ease, color 0.3s ease;

}
.logo img {
  width: 150px;
  height: auto;
  transition: transform 0.7s ease;
}
.logo img:hover {
  transform: scale(1.1);
}
        /* ========================================
           VARIABLES ET R√âINITIALISATION
           ======================================== */
        :root {
            --primary: #014537;
            --secondary: #C9A349;
            --accent: #e74c3c;
            --success: #27ae60;
            --warning: #f39c12;
            --info: #3498db;
            --light: #ecf0f1;
            --dark: #014537;
            --gray: #95a5a6;
            --light-gray: #f8f9fa;
            --dark-gray: #7f8c8d;
            --shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
            --shadow-lg: 0 10px 25px rgba(0, 0, 0, 0.15);
            --radius: 8px;
            --radius-sm: 4px;
            --radius-lg: 12px;
            --transition: all 0.3s ease;
            --transition-fast: all 0.15s ease;
        }

        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            line-height: 1.6;
            color: var(--dark);
            background-color: #f5f7fa;
            min-height: 100vh;
        }

        .container {
            width: 100%;
            max-width: 1200px;
            margin: 0 auto;
            padding: 0 20px;
        }

        /* ========================================
           HEADER
           ======================================== */
        .navbar {
            background-color: white;
            box-shadow: var(--shadow);
            position: sticky;
            top: 0;
            z-index: 1000;
            padding: 1rem 0;
        }

        .navbar .container {
            display: flex;
            justify-content: space-between;
            align-items: center;
        }

        .navbar-brand {
            font-size: 1.8rem;
            font-weight: bold;
            color: var(--primary);
            text-decoration: none;
        }

        .navbar-brand span {
            color: var(--secondary);
        }

        .navbar-nav {
            display: flex;
            gap: 1rem;
            align-items: center;
            list-style: none;
        }

        .nav-link {
            color: var(--dark);
            text-decoration: none;
            font-weight: 500;
            padding: 0.5rem 1rem;
            border-radius: var(--radius);
            transition: var(--transition);
        }

        .nav-link:hover {
            background-color: var(--light);
            color: var(--secondary);
        }

        .nav-link.active {
            background-color: rgba(201, 163, 73, 0.1);
            color: var(--secondary);
        }

        /* ========================================
           BOUTONS
           ======================================== */
        .btn {
            display: inline-block;
            padding: 0.75rem 1.5rem;
            border: none;
            border-radius: var(--radius);
            font-size: 1rem;
            font-weight: 500;
            text-align: center;
            cursor: pointer;
            transition: var(--transition);
            text-decoration: none;
            outline: none;
        }

        .btn:hover {
            transform: translateY(-2px);
            box-shadow: var(--shadow);
        }

        .btn-primary {
            background-color: var(--secondary);
            color: var(--primary);
            font-weight: 600;
        }

        .btn-primary:hover {
            background-color: #b8933a;
        }

        .btn-danger {
            background-color: var(--accent);
            color: white;
        }

        .btn-danger:hover {
            background-color: #c0392b;
        }

        .btn-sm {
            padding: 0.5rem 1rem;
            font-size: 0.875rem;
        }

        .btn-edit {
            background-color: #3498db;
            color: white;
        }

        .btn-edit:hover {
            background-color: #2980b9;
        }

        /* ========================================
           DASHBOARD LAYOUT
           ======================================== */
        .dashboard {
            display: grid;
            grid-template-columns: 250px 1fr;
            gap: 2rem;
            margin: 2rem 0;
            min-height: calc(100vh - 180px);
        }

        @media (max-width: 1024px) {
            .dashboard {
                grid-template-columns: 1fr;
            }
        }

        /* ========================================
           SIDEBAR
           ======================================== */
        .sidebar {
            background: white;
            border-radius: var(--radius);
            padding: 1.5rem;
            box-shadow: var(--shadow);
            height: fit-content;
            position: sticky;
            top: 100px;
        }

        @media (max-width: 1024px) {
            .sidebar {
                position: static;
            }
        }

        .user-info {
            text-align: center;
            margin-bottom: 2rem;
            padding-bottom: 1.5rem;
            border-bottom: 1px solid #eee;
        }

        .user-avatar {
            width: 80px;
            height: 80px;
            background: linear-gradient(135deg, var(--primary), #026e54);
            border-radius: 50%;
            margin: 0 auto 1rem;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 2rem;
            color: white;
            font-weight: bold;
        }

        .user-name {
            font-size: 1.2rem;
            font-weight: 600;
            margin-bottom: 0.5rem;
            color: var(--primary);
        }

        .user-id {
            font-size: 0.9rem;
            color: var(--gray);
            background: var(--light);
            padding: 0.25rem 0.75rem;
            border-radius: 20px;
            display: inline-block;
            margin-top: 0.5rem;
            cursor: pointer;
            transition: var(--transition);
        }

        .user-id:hover {
            background-color: #ddd;
        }

        .sidebar-nav {
            list-style: none;
        }

        .sidebar-nav li {
            margin-bottom: 0.5rem;
        }

        .sidebar-nav a {
            display: flex;
            align-items: center;
            gap: 0.75rem;
            padding: 0.75rem 1rem;
            color: var(--dark);
            text-decoration: none;
            border-radius: var(--radius);
            transition: var(--transition);
        }

        .sidebar-nav a:hover,
        .sidebar-nav a.active {
            background-color: rgba(201, 163, 73, 0.1);
            color: var(--secondary);
        }

        /* ========================================
           MAIN CONTENT
           ======================================== */
        .main-content {
            background: white;
            border-radius: var(--radius);
            padding: 2rem;
            box-shadow: var(--shadow);
        }

        .page-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 2rem;
            padding-bottom: 1rem;
            border-bottom: 2px solid rgba(1, 69, 55, 0.1);
        }

        .page-header h1 {
            font-size: 2rem;
            font-weight: 600;
            color: var(--primary);
            margin-bottom: 0;
        }

        /* ========================================
           STATISTICS CARDS
           ======================================== */
        .stats-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
            gap: 1.5rem;
            margin-bottom: 2rem;
        }

        .stat-card {
            color: white;
            padding: 1.5rem;
            border-radius: var(--radius);
            text-align: center;
            transition: var(--transition);
        }

        .stat-card:hover {
            transform: translateY(-5px);
            box-shadow: var(--shadow-lg);
        }

        .stat-card-primary {
            background: linear-gradient(135deg, #014537 0%, #026e54 100%);
        }

        .stat-card-secondary {
            background: linear-gradient(135deg, #C9A349 0%, #e0ba5c 100%);
        }

        .stat-card-success {
            background: linear-gradient(135deg, #2ecc71 0%, #27ae60 100%);
        }

        .stat-card-warning {
            background: linear-gradient(135deg, #f39c12 0%, #e67e22 100%);
        }

        .stat-number {
            font-size: 2.5rem;
            font-weight: bold;
            margin-bottom: 0.5rem;
        }

        .stat-label {
            font-size: 0.9rem;
            opacity: 0.9;
        }

        /* ========================================
           TABLES
           ======================================== */
        .table-container {
            background: white;
            border-radius: var(--radius);
            overflow: hidden;
            box-shadow: var(--shadow);
            overflow-x: auto;
            margin-top: 1rem;
        }

        .table {
            width: 100%;
            border-collapse: collapse;
            min-width: 800px;
        }

        .table th,
        .table td {
            padding: 1rem;
            text-align: left;
            border-bottom: 1px solid #eee;
            vertical-align: middle;
        }

        .table th {
            background-color: rgba(1, 69, 55, 0.05);
            font-weight: 600;
            color: var(--dark);
            white-space: nowrap;
        }

        .table tbody tr:hover {
            background-color: rgba(201, 163, 73, 0.05);
        }

        /* ========================================
           BADGES
           ======================================== */
        .badge {
            display: inline-block;
            padding: 0.25rem 0.75rem;
            border-radius: 20px;
            font-size: 0.8rem;
            font-weight: 500;
            white-space: nowrap;
        }

        .badge-pending {
            background-color: rgba(243, 156, 18, 0.1);
            color: #e67e22;
            border: 1px solid rgba(243, 156, 18, 0.3);
        }

        .badge-approved {
            background-color: rgba(39, 174, 96, 0.1);
            color: #27ae60;
            border: 1px solid rgba(39, 174, 96, 0.3);
        }

        .badge-rejected {
            background-color: rgba(231, 76, 60, 0.1);
            color: #c0392b;
            border: 1px solid rgba(231, 76, 60, 0.3);
        }

        /* ========================================
           IMAGES
           ======================================== */
        .product-img-small {
            width: 60px;
            height: 60px;
            object-fit: cover;
            border-radius: var(--radius-sm);
            border: 1px solid #ddd;
        }

        /* ========================================
           ACTION BUTTONS
           ======================================== */
        .action-buttons {
            display: flex;
            gap: 0.5rem;
        }

        /* ========================================
           EMPTY STATE
           ======================================== */
        .empty-state {
            text-align: center;
            padding: 3rem;
            color: var(--gray);
        }

        .empty-state h3 {
            margin: 1rem 0;
            color: var(--dark-gray);
        }

        /* ========================================
           USER INFO SECTION
           ======================================== */
        .user-info-section {
            background: rgba(1, 69, 55, 0.05);
            padding: 1.5rem;
            border-radius: var(--radius);
            margin-top: 3rem;
        }

        .user-info-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
            gap: 1rem;
            margin-bottom: 1rem;
        }

        .user-info-item strong {
            display: block;
            margin-bottom: 0.25rem;
            color: var(--primary);
        }

        .user-id-container {
            margin-top: 1rem;
            padding-top: 1rem;
            border-top: 1px solid rgba(1, 69, 55, 0.1);
        }

        /* ========================================
           NOTIFICATIONS
           ======================================== */
        .notification {
            position: fixed;
            top: 20px;
            right: 20px;
            padding: 1rem 1.5rem;
            background: white;
            border-radius: var(--radius);
            box-shadow: 0 5px 15px rgba(0, 0, 0, 0.2);
            z-index: 9999;
            display: flex;
            align-items: center;
            gap: 1rem;
            transform: translateX(400px);
            transition: transform 0.3s ease;
            max-width: 400px;
        }

        .notification.show {
            transform: translateX(0);
        }

        .notification.success {
            border-left: 4px solid var(--success);
        }

        .notification.error {
            border-left: 4px solid var(--accent);
        }

        .notification.info {
            border-left: 4px solid var(--info);
        }

        /* ========================================
           CONFIRMATION MODAL
           ======================================== */
        .confirm-modal {
            position: fixed;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background: rgba(0, 0, 0, 0.5);
            display: none;
            justify-content: center;
            align-items: center;
            z-index: 2000;
            padding: 1rem;
        }

        .confirm-modal.active {
            display: flex;
        }

        .confirm-box {
            background: white;
            border-radius: var(--radius);
            padding: 2rem;
            max-width: 400px;
            width: 100%;
            text-align: center;
        }

        .confirm-actions {
            display: flex;
            gap: 1rem;
            justify-content: center;
            margin-top: 1.5rem;
        }

        /* ========================================
           FOOTER
           ======================================== */
        .footer {
            background-color: var(--primary);
            color: white;
            padding: 2rem 0;
            margin-top: 4rem;
        }

        .copyright {
            text-align: center;
            padding-top: 2rem;
            border-top: 1px solid rgba(255, 255, 255, 0.1);
            color: rgba(255, 255, 255, 0.7);
            font-size: 0.9rem;
        }

        /* ========================================
           RESPONSIVE
           ======================================== */
        @media (max-width: 768px) {
            .navbar .container {
                flex-direction: column;
                gap: 1rem;
            }
            
            .navbar-nav {
                flex-direction: column;
                width: 100%;
            }
            
            .nav-link {
                width: 100%;
                text-align: center;
            }
            
            .stats-grid {
                grid-template-columns: 1fr;
            }
            
            .page-header {
                flex-direction: column;
                gap: 1rem;
                text-align: center;
            }
            
            .action-buttons {
                flex-direction: column;
            }
        }

        /* ========================================
           ANIMATIONS
           ======================================== */
        @keyframes fadeIn {
            from {
                opacity: 0;
                transform: translateY(20px);
            }
            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        .fade-in {
            animation: fadeIn 0.5s ease forwards;
        }
    </style>
</head>
<body>
    <!-- Header -->
    <header class="navbar">
        <div class="container">
             <div class="logo"><img src="/uploads/logo.png" alt=""></div>
            <ul class="navbar-nav">
                <li><a href="/" class="nav-link">Accueil</a></li>
                <li><a href="/dashboard" class="nav-link active">Tableau de bord</a></li>
                <li><a href="/add-product" class="nav-link">Ajouter Produit</a></li>
                <li><a href="/logout" class="btn btn-danger btn-sm">D√©connexion</a></li>
            </ul>
        </div>
    </header>

    <!-- Dashboard Main Content -->
    <div class="container">
        <div class="dashboard">
            <!-- Sidebar -->
            <aside class="sidebar">
                <div class="user-info">
                    <div class="user-avatar">
                        <%= storeName ? storeName.charAt(0).toUpperCase() : 'U' %>
                    </div>
                    <h3 class="user-name"><%= storeName || 'Utilisateur' %></h3>
                    <div class="user-id" id="copyUserId" title="Cliquez pour copier">
                        ID: <%= user.userId %>
                    </div>
                </div>
                
                <nav>
                    <ul class="sidebar-nav">
                        <li><a href="/dashboard" class="active">üìä Tableau de bord</a></li>
                        <li><a href="/add-product">‚ûï Ajouter produit</a></li>
                        <li><a href="/edit-profile">üë§ Modifier profil</a></li>
                        
                    </ul>
                </nav>
            </aside>

            <!-- Main Content -->
            <main class="main-content">
                <!-- Page Header -->
                <div class="page-header">
                    <h1>Tableau de bord</h1>
                    <a href="/add-product" class="btn btn-primary">‚ûï Ajouter un produit</a>
                </div>

                <!-- Statistics Cards -->
                <div class="stats-grid">
                    <div class="stat-card stat-card-primary">
                        <div class="stat-number"><%= approvedProducts.length %></div>
                        <div class="stat-label">Produits approuv√©s</div>
                    </div>
                    <div class="stat-card stat-card-secondary">
                        <div class="stat-number"><%= pendingProducts.length %></div>
                        <div class="stat-label">En attente</div>
                    </div>
                    <div class="stat-card stat-card-success">
                        <div class="stat-number"><%= (approvedProducts.length + pendingProducts.length) %></div>
                        <div class="stat-label">Total produits</div>
                    </div>
                    
                </div>

                <!-- Products Pending Approval -->
                <% if (pendingProducts.length > 0) { %>
                    <section style="margin: 2rem 0;">
                        <h2 style="margin-bottom: 1rem; color: var(--primary);">Produits en attente d'approbation</h2>
                        <div class="table-container">
                            <table class="table">
                                <thead>
                                    <tr>
                                        <th>Image</th>
                                        <th>Nom</th>
                                        <th>Prix (DH)</th>
                                        <th>Cat√©gorie</th>
                                        <th>Ville</th>
                                        <th>Statut</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <% pendingProducts.forEach(product => { %>
                                        <tr data-product-id="<%= product._id %>">
                                            <td>
                                                <img src="<%= product.mainImages[0] || '/uploads/default-product.jpg' %>" 
                                                     alt="<%= product.name %>" 
                                                     class="product-img-small"
                                                     onerror="this.src='/uploads/default-product.jpg'">
                                            </td>
                                            <td><%= product.name %></td>
                                            <td><%= product.price %></td>
                                            <td><%= product.category %></td>
                                            <td><%= product.city %></td>
                                            <td>
                                                <span class="badge badge-pending">
                                                    <% if (product.status === 'pending') { %>
                                                        En attente
                                                    <% } else if (product.status === 'approved') { %>
                                                        Approuv√©
                                                    <% } else if (product.status === 'rejected') { %>
                                                        Rejet√©
                                                    <% } %>
                                                </span>
                                            </td>
                                            <td>
                                                <div class="action-buttons">
                                                    <button class="btn btn-edit btn-sm" onclick="editProduct('<%= product._id %>')">
                                                        ‚úèÔ∏è Modifier
                                                    </button>
                                                    <button class="btn btn-danger btn-sm" onclick="confirmDeleteProduct('<%= product._id %>', '<%= product.name %>')">
                                                        üóëÔ∏è Supprimer
                                                    </button>
                                                </div>
                                            </td>
                                        </tr>
                                    <% }) %>
                                </tbody>
                            </table>
                        </div>
                    </section>
                <% } %>

                <!-- Approved Products -->
                <section style="margin: 2rem 0;">
                    <h2 style="margin-bottom: 1rem; color: var(--primary);">Produits approuv√©s</h2>
                    <% if (approvedProducts.length > 0) { %>
                        <div class="table-container">
                            <table class="table">
                                <thead>
                                    <tr>
                                        <th>Image</th>
                                        <th>Nom</th>
                                        <th>Prix (DH)</th>
                                        <th>Cat√©gorie</th>
                                        <th>Ville</th>
                                        <th>Vues</th>
                                        <th>Statut</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <% approvedProducts.forEach(product => { %>
                                        <tr data-product-id="<%= product._id %>">
                                            <td>
                                                <img src="<%= product.mainImages[0] || '/uploads/default-product.jpg' %>" 
                                                     alt="<%= product.name %>" 
                                                     class="product-img-small"
                                                     onerror="this.src='/uploads/default-product.jpg'">
                                            </td>
                                            <td><%= product.name %></td>
                                            <td><%= product.price %></td>
                                            <td><%= product.category %></td>
                                            <td><%= product.city %></td>
                                            <td><%= product.views || 0 %></td>
                                            <td>
                                                <span class="badge badge-approved">Approuv√©</span>
                                            </td>
                                            <td>
                                                <div class="action-buttons">
                                                    <button class="btn btn-edit btn-sm" onclick="editProduct('<%= product._id %>')">
                                                        ‚úèÔ∏è Modifier
                                                    </button>
                                                    <button class="btn btn-danger btn-sm" onclick="confirmDeleteProduct('<%= product._id %>', '<%= product.name %>')">
                                                        üóëÔ∏è Supprimer
                                                    </button>
                                                </div>
                                            </td>
                                        </tr>
                                    <% }) %>
                                </tbody>
                            </table>
                        </div>
                    <% } else if (pendingProducts.length === 0) { %>
                        <div class="empty-state">
                            <div style="font-size: 3rem; margin-bottom: 1rem; opacity: 0.5;">üì¶</div>
                            <h3>Aucun produit trouv√©</h3>
                            <p>Commencez par ajouter votre premier produit.</p>
                            <a href="/add-product" class="btn btn-primary" style="margin-top: 1rem;">
                                Ajouter votre premier produit
                            </a>
                        </div>
                    <% } %>
                </section>

                <!-- User Information -->
                <section class="user-info-section">
                    <h2 style="margin-bottom: 1rem; color: var(--primary);">Informations du compte</h2>
                    <div class="user-info-grid">
                        <div class="user-info-item">
                            <strong>Nom complet:</strong>
                            <%= user.fullName %>
                        </div>
                        <div class="user-info-item">
                            <strong>Nom du magasin:</strong>
                            <%= user.storeName %>
                        </div>
                        <div class="user-info-item">
                            <strong>Localisation:</strong>
                            <%= user.storeLocation %>
                        </div>
                        <div class="user-info-item">
                            <strong>T√©l√©phone:</strong>
                            <%= user.phone %>
                        </div>
                    </div>
                    <div class="user-id-container">
                        <strong>ID utilisateur:</strong><br>
                        <code style="background: white; padding: 0.5rem; border-radius: 4px; font-family: monospace; display: inline-block; margin-top: 0.5rem;">
                            <%= user.userId %>
                        </code>
                        <small style="display: block; margin-top: 0.5rem; color: var(--gray);">
                            Conservez cet ID pr√©cieusement, il est n√©cessaire pour vous connecter.
                        </small>
                    </div>
                </section>
            </main>
        </div>
    </div>

    <!-- Footer -->
    <footer class="footer">
        <div class="container">
            <div class="copyright">
                &copy; 2024 veradecoration. Tous droits r√©serv√©s.
            </div>
        </div>
    </footer>

    <!-- Confirmation Modal -->
    <div id="confirmModal" class="confirm-modal">
        <div class="confirm-box">
            <h3>Confirmer la suppression</h3>
            <p id="confirmMessage">√ätes-vous s√ªr de vouloir supprimer ce produit ?</p>
            <div class="confirm-actions">
                <button id="cancelDelete" class="btn btn-sm" style="background: var(--gray); color: white;">Annuler</button>
                <button id="confirmDelete" class="btn btn-danger btn-sm">Supprimer</button>
            </div>
        </div>
    </div>

    <!-- Notification -->
    <div id="notification" class="notification" style="display: none;"></div>

    <script>
        // ========================================
        // VARIABLES GLOBALES
        // ========================================
        let productToDelete = null;
        let productToDeleteName = '';

        // ========================================
        // FONCTIONS UTILITAIRES
        // ========================================

        // Afficher une notification
        function showNotification(message, type = 'info') {
            const notification = document.getElementById('notification');
            notification.textContent = message;
            notification.className = `notification ${type}`;
            notification.style.display = 'flex';
            
            setTimeout(() => {
                notification.classList.add('show');
            }, 100);
            
            setTimeout(() => {
                notification.classList.remove('show');
                setTimeout(() => {
                    notification.style.display = 'none';
                }, 300);
            }, 3000);
        }

        // Copier l'ID utilisateur
        document.getElementById('copyUserId').addEventListener('click', function() {
            const userId = '<%= user.userId %>';
            navigator.clipboard.writeText(userId).then(() => {
                showNotification('ID copi√© dans le presse-papier', 'success');
            }).catch(err => {
                showNotification('Erreur lors de la copie', 'error');
            });
        });

        // Rediriger vers la page d'√©dition
        function editProduct(productId) {
            showNotification('Chargement du produit...', 'info');
            window.location.href = `/edit-product/${productId}`;
        }

        // Confirmer la suppression
        function confirmDeleteProduct(productId, productName) {
            productToDelete = productId;
            productToDeleteName = productName;
            
            document.getElementById('confirmMessage').textContent = 
                `√ätes-vous s√ªr de vouloir supprimer le produit "${productName}" ? Cette action est irr√©versible.`;
            
            document.getElementById('confirmModal').classList.add('active');
        }

        // Ex√©cuter la suppression
        async function deleteProduct() {
            if (!productToDelete) return;
            
            const modal = document.getElementById('confirmModal');
            modal.classList.remove('active');
            
            showNotification('Suppression en cours...', 'info');
            
            try {
                const response = await fetch(`/api/products/${productToDelete}`, {
                    method: 'DELETE',
                    headers: {
                        'Content-Type': 'application/json'
                    }
                });
                
                const result = await response.json();
                
                if (!response.ok) {
                    throw new Error(result.message || 'Erreur lors de la suppression');
                }
                
                showNotification(`Produit "${productToDeleteName}" supprim√© avec succ√®s`, 'success');
                
                // Supprimer la ligne du tableau
                const row = document.querySelector(`tr[data-product-id="${productToDelete}"]`);
                if (row) {
                    row.style.transition = 'all 0.3s ease';
                    row.style.opacity = '0';
                    row.style.transform = 'translateX(-100%)';
                    
                    setTimeout(() => {
                        row.remove();
                        updateProductCounts();
                    }, 300);
                }
                
                // R√©initialiser
                productToDelete = null;
                productToDeleteName = '';
                
                // Recharger apr√®s 2 secondes si la ligne n'existe pas
                setTimeout(() => {
                    if (!document.querySelector(`tr[data-product-id="${productToDelete}"]`)) {
                        window.location.reload();
                    }
                }, 2000);
                
            } catch (error) {
                console.error('‚ùå Erreur suppression:', error);
                showNotification(error.message || 'Erreur lors de la suppression', 'error');
            }
        }

        // Mettre √† jour les compteurs de produits
        function updateProductCounts() {
            const approvedCount = document.querySelectorAll('.badge-approved').length;
            const pendingCount = document.querySelectorAll('.badge-pending').length;
            const totalCount = approvedCount + pendingCount;
            
            // Mettre √† jour les cartes stats
            const statNumbers = document.querySelectorAll('.stat-number');
            if (statNumbers.length >= 3) {
                statNumbers[0].textContent = approvedCount;
                statNumbers[1].textContent = pendingCount;
                statNumbers[2].textContent = totalCount;
            }
        }

        // ========================================
        // GESTION DES √âV√âNEMENTS
        // ========================================
        document.addEventListener('DOMContentLoaded', function() {
            // V√©rifier les messages dans l'URL
            const urlParams = new URLSearchParams(window.location.search);
            const message = urlParams.get('message');
            const type = urlParams.get('type');
            
            if (message) {
                showNotification(decodeURIComponent(message), type || 'success');
                // Nettoyer l'URL
                window.history.replaceState({}, document.title, window.location.pathname);
            }

            // G√©rer les boutons de confirmation
            document.getElementById('cancelDelete').addEventListener('click', function() {
                document.getElementById('confirmModal').classList.remove('active');
                productToDelete = null;
                productToDeleteName = '';
            });

            document.getElementById('confirmDelete').addEventListener('click', deleteProduct);

            // Fermer la modal avec ESC
            document.addEventListener('keydown', function(e) {
                if (e.key === 'Escape') {
                    document.getElementById('confirmModal').classList.remove('active');
                }
            });

            // Fermer la modal en cliquant √† l'ext√©rieur
            document.getElementById('confirmModal').addEventListener('click', function(e) {
                if (e.target === this) {
                    this.classList.remove('active');
                    productToDelete = null;
                    productToDeleteName = '';
                }
            });

            // Animation des cartes stats
            const statCards = document.querySelectorAll('.stat-card');
            statCards.forEach((card, index) => {
                card.style.animationDelay = `${index * 0.1}s`;
                card.classList.add('fade-in');
            });

            // Mettre √† jour les vues p√©riodiquement (simulation)
            setInterval(() => {
                const viewCells = document.querySelectorAll('.table td:nth-child(6)');
                viewCells.forEach(cell => {
                    if (Math.random() > 0.9) {
                        const current = parseInt(cell.textContent) || 0;
                        cell.textContent = current + 1;
                        cell.style.color = '#27ae60';
                        setTimeout(() => {
                            cell.style.color = '';
                        }, 1000);
                    }
                });
            }, 15000);
        });

        // Gestion des erreurs d'image
        document.addEventListener('error', function(e) {
            if (e.target.tagName === 'IMG' && e.target.classList.contains('product-img-small')) {
                e.target.src = '/uploads/default-product.jpg';
            }
        }, true);
    </script>
</body>
