function sendToSearchPage(data) {
  // ÿ•ŸÜÿ¥ÿßÿ° form ŸÖÿÆŸÅŸä
  const form = document.createElement('form');
  form.method = 'POST';
  form.action = '/search';  // Ÿáÿ∞ÿß ŸáŸà route ÿßŸÑŸÄ search.ejs
  
  // ÿ•ÿ∂ÿßŸÅÿ© ÿ≠ŸÇŸàŸÑ ŸÖÿÆŸÅŸäÿ© ŸÑŸÑÿ®ŸäÿßŸÜÿßÿ™
  Object.keys(data).forEach(key => {
    const input = document.createElement('input');
    input.type = 'hidden';
    input.name = key;
    input.value = data[key];
    form.appendChild(input);
  });
  
  // ÿ•ÿ∂ÿßŸÅÿ© form ÿ•ŸÑŸâ ÿßŸÑÿµŸÅÿ≠ÿ© Ÿàÿ•ÿ±ÿ≥ÿßŸÑŸá
  document.body.appendChild(form);
  form.submit();
}

