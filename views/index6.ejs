        }
    }
}

// ========== ÿ™ÿ∑ÿ®ŸäŸÇ ÿßŸÑŸÅŸÑÿßÿ™ÿ± ==========
function applyFilters() {
    //('üéõÔ∏è ÿ™ÿ∑ÿ®ŸäŸÇ ÿßŸÑŸÅŸÑÿßÿ™ÿ±...');
    
    if (productse.length === 0) {
        console.warn('‚ö†Ô∏è ŸÑÿß ÿ™Ÿàÿ¨ÿØ ŸÖŸÜÿ™ÿ¨ÿßÿ™ ŸÑÿ™ÿµŸÅŸäÿ™Ÿáÿß');
        return;
    }
    
    // ÿßŸÑÿ≠ÿµŸàŸÑ ÿπŸÑŸâ ŸÇŸäŸÖ ÿßŸÑŸÅŸÑÿßÿ™ÿ±
    const city = document.getElementById('city')?.value || '';
    const style = document.getElementById('style')?.value || '';
    const color = document.getElementById('color')?.value || '';
    const priceFilter = document.getElementById('price')?.value || '';
    
    // ŸÅŸÑÿ™ÿ±ÿ© ÿßŸÑŸÖŸÜÿ™ÿ¨ÿßÿ™
    let filteredProducts = productse.filter(product => {
        // ŸÅŸÑÿ™ÿ±ÿ© ÿßŸÑŸÖÿØŸäŸÜÿ©
        if (city && city !== '' && product.city !== city) {
            return false;
        }
        
        // ŸÅŸÑÿ™ÿ±ÿ© ÿßŸÑŸÜŸÖÿ∑
        if (style && style !== '' && product.style !== style) {
            return false;
        }
        
        // ŸÅŸÑÿ™ÿ±ÿ© ÿßŸÑŸÑŸàŸÜ
        if (color && color !== '' && product.color !== color) {
            return false;
        }
        
        // ŸÅŸÑÿ™ÿ±ÿ© ÿßŸÑÿ≥ÿπÿ±
        if (priceFilter && priceFilter !== '') {
            const productPrice = product.price || 0;
            const priceValue = parseInt(priceFilter);
            
            switch (priceValue) {
                case 500:
                    if (productPrice > 500) return false;
                    break;
                case 1000:
                    if (productPrice <= 500 || productPrice > 1000) return false;
                    break;
                case 3000:
                    if (productPrice <= 1000 || productPrice > 3000) return false;
                    break;
                case 5000:
                    if (productPrice <= 3000) return false;
                    break;
            }
        }
        
        return true;
    });
    
    //(`üìä ŸÜÿ™ÿßÿ¶ÿ¨ ÿßŸÑŸÅŸÑÿ™ÿ±ÿ©: ${filteredProducts.length} ŸÖŸÜÿ™ÿ¨ ŸÖŸÜ ÿ£ÿµŸÑ ${productse.length}`);
    
    // ÿπÿ±ÿ∂ ÿßŸÑŸÜÿ™ÿßÿ¶ÿ¨
    displayFilteredProducts(filteredProducts);
    
    // ÿ™ÿ≠ÿØŸäÿ´ ÿπÿØÿßÿØ ÿßŸÑŸÜÿ™ÿßÿ¶ÿ¨
    updateResultsCount(filteredProducts.length);
}

