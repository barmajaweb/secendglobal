                month: 'long', 
                day: 'numeric',
                hour: '2-digit',
                minute: '2-digit'
            };
            lastLogin.textContent = now.toLocaleDateString('fr-FR', options);
            
            // Animation d'entr√©e
            const formGroups = document.querySelectorAll('.form-group');
