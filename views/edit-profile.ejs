    descTextarea.addEventListener('input', updateCounter);
    updateCounter();
    
    // ÿπÿ±ÿ∂ ŸÖÿπŸÑŸàŸÖÿßÿ™ ÿßŸÑŸÖŸÜÿ∑ŸÇÿ© ÿ≠ÿ≥ÿ® ÿßŸÑÿßÿÆÿ™Ÿäÿßÿ±
    const deliverySelect = document.getElementById('deliveryArea');
